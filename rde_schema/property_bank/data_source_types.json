{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://archive.icpsr.umich.edu/schema/property_banks/data_source_types",
  "title": "Data Source Types",
  "description": "The source(s) of the data as collected by the Principal Investigators.",
  "usageNotes": "This controlled vocabulary was taken from the DDI Alliance. Source: DDI Alliance CV DataSourceType https://rdf-vocabulary.ddialliance.org/ddi-cv/DataSourceType/1.0.2/DataSourceType.html.",
  "controlledVocab": "dataSourceTypes",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "label": {
        "title": "Data Source Type",
        "description": "A human-readable form of the term.",
        "type": "string",
        "examples": [
          "Registers/Records/Accounts: Medical/Clinical",
          "Events/Interactions", 
          "Other"
        ]
      },
      "code": {
        "title": "Data Source Type Code",
        "description": "A machine-readable/-actionable form of the term.",
        "type": "string",
        "examples": ["RegistersRecordsAccounts.MedicalClinical", "EventsInteractions", "Other"]
      },
      "uri": {
        "title": "Data Source Type URI",
        "description": "The URI for the term.",
        "type": "string"
      }
    },
    "required": ["label", "code", "uri"]
  },
  "examples": [
    [
      {
        "label": "Registers/Records/Accounts: Medical/Clinical",
        "code": "RegistersRecordsAccounts.MedicalClinical",
        "uri": "https://example.com/data_source_type/123"
      },
      {
        "label": "Events/Interactions",
        "code": "EventsInteractions",
        "uri": "https://example.com/data_source_type/234"
      }
    ],
    [
      {
        "label": "Other",
        "code": "Other",
        "uri": "https://example.com/data_source_type/737"
      }
    ]
  ]
}